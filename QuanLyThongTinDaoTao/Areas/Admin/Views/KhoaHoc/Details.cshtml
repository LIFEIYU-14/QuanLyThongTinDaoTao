@model QuanLyThongTinDaoTao.Models.KhoaHoc
@{
    ViewBag.Title = "Chi Tiết Khóa Học";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";

    var imagePath = !string.IsNullOrEmpty(Model.HinhDaiDienKhoaHoc)
        ? Url.Content(Model.HinhDaiDienKhoaHoc)
        : Url.Content("~/Upload/KhoaHoc/default.png");
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fa-solid fa-graduation-cap"></i> Chi Tiết Khóa Học</h3>
        </div>
        <div class="card-body fs-5">
            <div class="row">
                <!-- Hình Đại Diện -->
                <div class="col-md-5 mb-4">
                    <div class="border rounded-3 p-2 bg-light shadow-sm">
                        <img src="@imagePath" class="img-fluid rounded-3" alt="@Model.TenKhoaHoc" style="max-height: 350px; width: 100%; object-fit: cover;" />
                    </div>
                </div>

                <!-- Thông Tin Khóa Học -->
                <div class="col-md-7">
                    <div class="mb-4">
                        <p><strong><i class="fa-solid fa-book-open"></i> Tên Khóa Học:</strong> @Model.TenKhoaHoc</p>
                        <p><strong><i class="fa-solid fa-clock"></i> Thời Lượng:</strong> @Model.ThoiLuong tiết</p>
                        <p><strong><i class="fa-solid fa-calendar-plus"></i> Ngày Tạo:</strong> @Model.NgayTao.ToString("dd/MM/yyyy")</p>
                        <p><strong><i class="fa-solid fa-calendar-check"></i> Ngày Cập Nhật:</strong> @Model.NgayCapNhat.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="mb-3">
                        <p><strong><i class="fa-solid fa-file-lines"></i> Mô Tả:</strong></p>
                        <div class="border rounded p-3 bg-light">@Html.Raw(Model.MoTa)</div>
                    </div>
                </div>
            </div>

            <!-- Tệp Đính Kèm -->
            <div class="mt-4">
                <h4 class="text-primary"><i class="fa-solid fa-paperclip"></i> Tệp Đính Kèm</h4>

                @if (Model.KhoaHocAttachments != null && Model.KhoaHocAttachments.Any())
                {
                    <div class="row mt-3">
                        @foreach (var attachment in Model.KhoaHocAttachments)
                        {
                            string fileType = attachment?.Attachment?.FileType?.ToLower();
                            string iconClass = "fa-file";
                            string badgeColor = "bg-secondary";

                            switch (fileType)
                            {
                                case "pdf":
                                    iconClass = "fa-file-pdf";
                                    badgeColor = "bg-danger";
                                    break;
                                case "docx":
                                case "doc":
                                    iconClass = "fa-file-word";
                                    badgeColor = "bg-primary";
                                    break;
                                case "txt":
                                    iconClass = "fa-file-alt";
                                    badgeColor = "bg-dark";
                                    break;
                                case "xlsx":
                                case "xls":
                                    iconClass = "fa-file-excel";
                                    badgeColor = "bg-success";
                                    break;
                                case "jpg":
                                case "jpeg":
                                case "png":
                                    <div class="col-md-3 mb-3">
                                        <div class="card h-100">
                                            <img src="@Url.Content(attachment.Attachment.FilePath)" class="card-img-top" style="height: 150px; object-fit: cover;" alt="@attachment.Attachment.FileName">
                                            <div class="card-body text-center">
                                                <a href="@Url.Content(attachment.Attachment.FilePath)" target="_blank" class="btn btn-sm btn-outline-primary">Xem Ảnh</a>
                                            </div>
                                        </div>
                                    </div>
                                    continue;
                                default:
                                    iconClass = "fa-file";
                                    badgeColor = "bg-secondary";
                                    break;
                            }

                            <div class="col-md-6 mb-2">
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <i class="fas @iconClass me-2"></i>
                                        <a href="@Url.Content(attachment.Attachment.FilePath)" target="_blank" class="text-decoration-none">@attachment.Attachment.FileName</a>
                                    </div>
                                    <span class="badge @badgeColor rounded-pill">@attachment.Attachment.FileType</span>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info mt-3">Không có tệp đính kèm</div>
                }
            </div>

            <!-- Nút Hành Động -->
            <div class="text-center mt-5">
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg me-2">
                    <i class="fa-solid fa-arrow-left me-2"></i>Quay Lại
                </a>
                <a href="@Url.Action("Edit", new { id = Model.KhoaHocId })" class="btn btn-warning btn-lg me-2">
                    <i class="fa-solid fa-pen-to-square me-2"></i>Chỉnh Sửa
                </a>
                <a href="@Url.Action("DanhSachLopHoc", "KhoaHoc", new { id = Model.KhoaHocId })" class="btn btn-success btn-lg me-2">
                    <i class="fa-solid fa-list me-2"></i>Lớp Học
                </a>
                <a href="@Url.Action("Delete", new { id = Model.KhoaHocId })" class="btn btn-danger btn-lg"
                   onclick="return confirm('Bạn có chắc chắn muốn xóa khóa học này?');">
                    <i class="fa-solid fa-trash-can me-2"></i>Xóa
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .card-header {
        font-size: 1.5rem;
        padding: 1.25rem;
    }

    .card-body p {
        margin-bottom: 1rem;
    }

    .btn-lg {
        padding: 0.5rem 1.5rem;
        font-size: 1.125rem;
    }

    .list-group-item {
        padding: 1rem;
        transition: all 0.3s;
    }

        .list-group-item:hover {
            background-color: #f8f9fa;
        }

    .bg-light {
        background-color: #f8f9fa !important;
    }

    strong {
        color: #0d6efd;
    }

    .img-thumbnail {
        max-width: 200px;
        max-height: 200px;
    }

    .badge {
        font-size: 0.8rem;
    }
</style>