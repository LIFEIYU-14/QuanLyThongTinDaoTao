
@model QuanLyThongTinDaoTao.Models.HocVien
@{
    ViewBag.Title = "Thêm Học viên";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";

}

<h2>Thêm Học viên</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        @Html.LabelFor(model => model.HoVaTen)
        @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MatKhau)
        @Html.PasswordFor(model => model.MatKhau, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SoDienThoai)
        @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
}
