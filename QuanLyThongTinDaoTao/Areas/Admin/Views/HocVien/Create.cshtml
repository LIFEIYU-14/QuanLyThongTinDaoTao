@model QuanLyThongTinDaoTao.Models.HocVien
@{
    ViewBag.Title = "Thêm Học viên";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fa-solid fa-user-plus"></i> Thêm Học Viên</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "HocVien", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.HoVaTen, "Họ và Tên", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control", placeholder = "Nhập họ và tên", required = "required" })
                        @Html.ValidationMessageFor(model => model.HoVaTen, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                  
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.SoDienThoai, "Số Điện Thoại", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", type = "tel", placeholder = "Nhập số điện thoại", required = "required" })
                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
                        @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.CoQuanLamViec, "Cơ Quan Làm Việc", new { @class = "form-label" })
                        @Html.TextBoxFor(model => model.CoQuanLamViec, new { @class = "form-control", type = "tel", required = "required" })
                        @Html.ValidationMessageFor(model => model.CoQuanLamViec, "", new { @class = "text-danger" })
                    </div>

                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2 btn-lg">
                        <i class="fa-solid fa-circle-plus"></i> Thêm Học Viên
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .form-label {
        font-weight: bold;
    }

    .form-control {
        padding: 0.75rem;
        font-size: 1rem;
    }

    .btn-lg {
        padding: 0.5rem 1.5rem;
        font-size: 1.125rem;
    }

    .card-header {
        font-size: 1.5rem;
    }

    .text-danger {
        font-size: 0.875rem;
    }

    .row {
        margin-bottom: 1.5rem;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }
</style>
