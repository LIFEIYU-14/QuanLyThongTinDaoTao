@model List<QuanLyThongTinDaoTao.Models.HocVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
    var lopHoc = ViewBag.LopHoc as QuanLyThongTinDaoTao.Models.LopHoc;
    var buoiHoc = ViewBag.BuoiHoc as QuanLyThongTinDaoTao.Models.BuoiHoc;
}

<h3>Attendance for class: @lopHoc.TenLopHoc</h3>
<h4>Session: @buoiHoc.NgayHoc.ToString("dd/MM/yyyy")</h4>

<form action="@Url.Action("MarkAttendance", "DiemDanhHocVien")" method="post">
    <input type="hidden" name="lopHocId" value="@lopHoc.LopHocId" />
    <input type="hidden" name="buoiHocId" value="@buoiHoc.BuoiHocId" />

    <table class="table">
        <thead>
            <tr>
                <th>Họ Và Tên</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.HoVaTen</td>
                    <td>
                        <input type="checkbox" name="attendance[@student.MaHocVien]" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <button type="submit" class="btn btn-primary">Xác Nhận Điểm Danh</button>
</form>
