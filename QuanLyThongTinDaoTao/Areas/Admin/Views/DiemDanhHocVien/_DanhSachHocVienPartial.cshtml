@model dynamic

<table class="table">
    <thead>
        <tr>
            <th>Tên học viên</th>
            <th>Ngày học</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model.Students)
        {
            <tr>
                <td>@student.HocVien.HoVaTen</td>  <!-- Hiển thị tên học viên -->
                <td>
                    <!-- Hiển thị các buổi học cho lớp đã chọn -->
                    @foreach (var session in Model.GroupedSessions)
                    {
                        <span>@session.NgayHoc.ToString("dd/MM/yyyy")</span><br />
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
