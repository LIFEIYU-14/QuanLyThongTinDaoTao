@model QuanLyThongTinDaoTao.Models.GiangVien
@{
    ViewBag.Title = "Chỉnh sửa giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<h2>Chỉnh sửa giảng viên</h2>

@using (Html.BeginForm("Edit", "GiangVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.NguoiDungId) <!-- Đảm bảo ID không bị mất -->

    <div class="form-horizontal">
        <div class="form-group">
            <label>Mã giảng viên</label>
            @Html.TextBoxFor(model => model.MaGiangVien, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Họ và Tên</label>
            @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Ngày sinh</label>
            @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="form-group">
            <label>Chuyên môn</label>
            @Html.TextBoxFor(model => model.ChuyenMon, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Học hàm</label>
            @Html.TextBoxFor(model => model.HocHam, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", type = "tel" })
        </div>

        <div class="form-group">
            <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
