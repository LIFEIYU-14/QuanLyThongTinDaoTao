@model QuanLyThongTinDaoTao.Models.GiangVien
@{
    ViewBag.Title = "Thêm giảng viên";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<h2>Thêm giảng viên</h2>

@using (Html.BeginForm("Create", "GiangVien", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <label>Họ và Tên</label>
            @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control", required = "required" })
        </div>

        <div class="form-group">
            <label>Ngày sinh</label>
            @Html.TextBoxFor(model => model.NgaySinh, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required" })
        </div>

        <div class="form-group">
            <label>Chuyên môn</label>
            @Html.TextBoxFor(model => model.ChuyenMon, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Học hàm</label>
            @Html.TextBoxFor(model => model.HocHam, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", required = "required" })
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", type = "tel", required = "required" })
        </div>

        <div class="form-group">
            <input type="submit" value="Thêm mới" class="btn btn-success" />
            @Html.ActionLink("Hủy", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
}
