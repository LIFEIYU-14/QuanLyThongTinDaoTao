@model QuanLyThongTinDaoTao.Models.GiangVien

@{
    ViewBag.Title = "Thêm Giảng Viên";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white text-center">
            <h3><i class="fa-solid fa-user-plus"></i> Thêm Giảng Viên</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "GiangVien", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.HoVaTen, "Họ và Tên", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.HoVaTen, new { @class = "form-control", placeholder = "Nhập họ và tên", required = "required" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.NgaySinh, "Ngày Sinh", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.NgaySinh, new { @class = "form-control", type = "date", required = "required" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.ChuyenMon, "Chuyên Môn", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.ChuyenMon, new { @class = "form-control", placeholder = "Nhập chuyên môn" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.HocHam, "Học Hàm", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.HocHam, new { @class = "form-control", placeholder = "Nhập học hàm" })
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", type = "email", placeholder = "Nhập email", required = "required" })
                    </div>

                    <div class="col-md-6 mb-3">
                        @Html.LabelFor(model => model.SoDienThoai, "Số Điện Thoại", new { @class = "form-label" })
                        <span class="text-danger">*</span>
                        @Html.TextBoxFor(model => model.SoDienThoai, new { @class = "form-control", type = "tel", placeholder = "Nhập số điện thoại", required = "required" })
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success me-2 btn-lg">
                        <i class="fa-solid fa-circle-plus"></i> Thêm Giảng Viên
                    </button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            }
        </div>
    </div>
</div>
