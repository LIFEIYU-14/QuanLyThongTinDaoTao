@model IEnumerable<QuanLyThongTinDaoTao.Models.GiangVien>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-12 mb-3 mb-lg-5">
            <div class="overflow-hidden card table-nowrap table-card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Danh sách Giảng viên</h5>
                    <a href="@Url.Action("Create")" class="btn btn-light btn-sm">Thêm mới</a>
                </div>
                <div class="table-responsive">
                    <table class="table mb-0">
                        <thead class="small text-uppercase bg-body text-muted">
                            <tr>
                                <th>Mã GV</th>
                                <th>Họ và tên</th>
                                <th>Email</th>
                                <th>Chuyên môn</th>
                                <th>Học hàm</th>
                                <th class="text-end">Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="align-middle">
                                    <td>@item.MaGiangVien</td>
                                    <td>@item.HoVaTen</td>
                                    <td>@item.Email</td>
                                    <td>@item.ChuyenMon</td>
                                    <td>@item.HocHam</td>
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <a data-bs-toggle="dropdown" href="#" class="btn p-1">
                                                <i class="fa fa-bars" aria-hidden="true"></i>
                                            </a>
                                            <div class="dropdown-menu dropdown-menu-end">
                                                <a href="@Url.Action("Details", new { id = item.NguoiDungId })" class="dropdown-item">Xem chi tiết</a>
                                                <a href="@Url.Action("Edit", new { id = item.NguoiDungId })" class="dropdown-item">Chỉnh sửa</a>
                                                <a href="@Url.Action("Delete", new { id = item.NguoiDungId })" class="dropdown-item">Xóa</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        margin-top: 20px;
        background: #eee;
    }

    .card {
        box-shadow: 0 20px 27px 0 rgb(0 0 0 / 5%);
    }

    .avatar.sm {
        width: 2.25rem;
        height: 2.25rem;
        font-size: .818125rem;
    }

    .table-nowrap .table td, .table-nowrap .table th {
        white-space: nowrap;
    }

    .table > :not(caption) > * > * {
        padding: 0.75rem 1.25rem;
        border-bottom-width: 1px;
    }

    table th {
        font-weight: 600;
        background-color: #eeecfd !important;
    }
</style>