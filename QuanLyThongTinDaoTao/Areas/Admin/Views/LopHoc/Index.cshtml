@model List<QuanLyThongTinDaoTao.Models.LopHoc>

@{
    ViewBag.Title = "Danh Sách Lớp Học";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="bg-light text-center rounded p-4">
        <div class="d-flex align-items-center justify-content-between mb-4">
            <h6 class="mb-0 fs-3">Danh Sách Lớp Học</h6>
            <a href="@Url.Action("Create")" class="btn btn-primary fs-5"><i class="fas fa-plus-circle"></i> Thêm Lớp Học Mới</a>
        </div>
        <div class="table-responsive">
            <table class="table text-start align-middle table-bordered mb-0 fs-5">
                <thead>
                    <tr class="text-dark text-center">
                        <th scope="col">Tên Lớp Học</th>
                        <th scope="col">Số Tín Chỉ</th>
                        <th scope="col">Ngày Bắt Đầu</th>
                        <th scope="col">Ngày Kết Thúc</th>
                        <th scope="col">Trạng Thái</th>
                        <th scope="col">Hành Động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lophoc in Model)
                    {
                        <tr class="text-center">
                            <td>@lophoc.TenLopHoc</td>
                            <td>@lophoc.SoTinChi</td>
                            <td>@lophoc.NgayBatDau.ToString("dd/MM/yyyy")</td>
                            <td>@lophoc.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-@(lophoc.TrangThai == "SapMo" ? "primary" : (lophoc.TrangThai == "DangHoc" ? "success" : "secondary"))">
                                    @(lophoc.TrangThai == "SapMo" ? "Sắp Mở" : (lophoc.TrangThai == "DangHoc" ? "Đang Học" : "Đã Kết Thúc"))
                                </span>
                            </td>
                            <td>
                                <a href="@Url.Action("Details", new { id = lophoc.LopHocId })" class="btn btn-sm btn-info fs-6"><i class="fas fa-eye"></i> Chi Tiết</a>
                                <a href="@Url.Action("Edit", new { id = lophoc.LopHocId })" class="btn btn-sm btn-warning fs-6"><i class="fas fa-edit"></i> Sửa</a>
                                <a href="@Url.Action("Delete", new { id = lophoc.LopHocId })" class="btn btn-sm btn-danger fs-6" onclick="return confirm('Bạn có chắc chắn muốn xóa lớp học này?');">
                                    <i class="fas fa-trash-alt"></i> Xóa
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>