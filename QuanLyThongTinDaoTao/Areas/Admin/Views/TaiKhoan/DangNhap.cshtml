@model QuanLyThongTinDaoTao.LoginModelView.LoginViewModel
@{
    ViewBag.Title = "Đăng nhập";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Style/css/style.css">
</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">ĐĂNG NHẬP HỆ THỐNG</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center">
                            <span class="fa fa-user-o"></span>
                        </div>

                        @using (Html.BeginForm("DangNhap", "TaiKhoan", FormMethod.Post, new { @class = "login-form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-group">
                                @Html.LabelFor(m => m.TaiKhoanOrEmail, htmlAttributes: new { @class = "control-label" })
                                @Html.TextBoxFor(m => m.TaiKhoanOrEmail, new { @class = "form-control rounded-left", placeholder = "Username or Email" })
                                @Html.ValidationMessageFor(m => m.TaiKhoanOrEmail, "", new { @class = "text-danger" })
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(m => m.MatKhau, htmlAttributes: new { @class = "control-label" })
                                @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control rounded-left", placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                            </div>

                            @*<div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked />
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="#">Forgot Password</a>
                                </div>
                            </div>*@

                            <div class="form-group">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5">ĐĂNG NHẬP</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
