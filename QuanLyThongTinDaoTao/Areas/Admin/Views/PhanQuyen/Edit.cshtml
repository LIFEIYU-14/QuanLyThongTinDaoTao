@model QuanLyThongTinDaoTao.Models.NguoiDung
@{
    ViewBag.Title = "Cập nhật quyền người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_MainAdminLayout.cshtml";
}

<h2>Cập nhật quyền cho: @Model.TaiKhoan</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.Hidden("nguoiDungId", Model.NguoiDungId)

    <div class="form-group">
        <label>Chọn quyền</label>
        @Html.DropDownList("TenQuyen", (SelectList)ViewBag.DanhSachQuyen, "Chọn quyền", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a href="@Url.Action("Index")" class="btn btn-default">Quay lại</a>
}
