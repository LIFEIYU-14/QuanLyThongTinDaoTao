@model List<QuanLyThongTinDaoTao.Models.LopHoc>
@{
    ViewBag.Title = "Danh Sách Lớp Học";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@{
    var khoaHoc = ViewBag.KhoaHoc as QuanLyThongTinDaoTao.Models.KhoaHoc;
}

@if (khoaHoc != null)
{
    <div class="container-xxl py-5">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="card">
                        <img src="@(string.IsNullOrEmpty(khoaHoc.HinhDaiDienKhoaHoc) ? "/images/default-course.jpg" : khoaHoc.HinhDaiDienKhoaHoc)"
                             class="card-img-top"
                             alt="@khoaHoc.TenKhoaHoc">
                        <div class="card-body">
                            <h5 class="card-title text-center">@khoaHoc.TenKhoaHoc</h5>
                            <p class="card-text">@khoaHoc.MoTa</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <div class="bg-light text-center rounded p-4">
                        <h6 class="mb-3 fs-3">Danh Sách Lớp Học - @khoaHoc.TenKhoaHoc</h6>

                        @if (Model != null && Model.Any())
                        {
                            <table class="table table-bordered text-center fs-5">
                                <thead>
                                    <tr>
                                        <th>Tên Lớp Học</th>
                                        <th>Số Tín Chỉ</th>
                                        <th>Ngày Bắt Đầu</th>
                                        <th>Ngày Kết Thúc</th>
                                        <th>Trạng Thái</th>
                                        <th>Số HV Đã Đăng Ký</th>
                                        <th>Hành Động</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var lophoc in Model)
                                    {
                                   
                                        <tr>
                                            <td>@lophoc.TenLopHoc</td>
                                            <td>@lophoc.SoTinChi</td>
                                            <td>@lophoc.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                            <td>@lophoc.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                @{ string badgeClass = lophoc.TrangThai == "SapMo" ? "primary" : (lophoc.TrangThai == "DangHoc" ? "success" : "secondary"); }
                                                <span class="badge bg-@badgeClass">@lophoc.TrangThai</span>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("Register", "Courses", new { lopHocId = lophoc.LopHocId })" class="btn btn-sm btn-success">
                                                    <i class="fas fa-user-plus"></i> Đăng Ký
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <p class="text-danger">Không có lớp học nào trong khóa học này.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-xxl py-5">
        <div class="container">
            <div class="alert alert-danger" role="alert">
                Không tìm thấy khóa học.
            </div>
        </div>
    </div>
}
