@model QuanLyThongTinDaoTao.ModelsService.RegisterViewModel

@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<div class="container-fluid bg-primary py-5 mb-5">


    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="bg-light rounded-4 p-4 p-sm-5 border border-primary" style="border-radius:28px">
                    <h3 class="text-center mb-4">Đăng ký tài khoản</h3>

                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.HoVaTen, new { @class = "form-control", placeholder = "Họ và tên" })
                            @Html.ValidationMessageFor(m => m.HoVaTen, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.SoDienThoai, new { @class = "form-control", placeholder = "Số điện thoại" })
                            @Html.ValidationMessageFor(m => m.SoDienThoai, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.NgaySinh, new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.NgaySinh, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control", placeholder = "Mật khẩu" })
                            @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.PasswordFor(m => m.XacNhanMatKhau, new { @class = "form-control", placeholder = "Xác nhận mật khẩu" })
                            @Html.ValidationMessageFor(m => m.XacNhanMatKhau, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.TextBoxFor(m => m.SoNgauNhien, new { @class = "form-control", placeholder = "Nhập số ngẫu nhiên (4 chữ số)" })
                            @Html.ValidationMessageFor(m => m.SoNgauNhien, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill">Đăng ký</button>
                    }

                    <div class="text-center mt-3">
                        <p>Đã có tài khoản? <a href="@Url.Action("Login", "Account")">Đăng nhập</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

